<h1>GeekTwitter</h1>
<h3>Tweet一覧</h3>
<div class="tweets-container">
  <% @tweets.each do |t| %>
    <div class="tweet">    
      <%= link_to t.user.name, user_path(t.user.id) %><div>
      <%= t.bedtime %><div>
      <%= t.sleep_at %><div>
      <%= t.sleep_quality %><div>
      <%= t.body %><div>
      <%= link_to "詳細へ", tweet_path(t.id) %> 
      <%= link_to "編集する", edit_tweet_path(t.id) %>
      <%= button_to "削除する", tweet_path(t.id), method: :delete %> 
    </div>
  <% end %>
</div>
